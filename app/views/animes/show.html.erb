    <h2><%= link_to "Comment List", anime_comments_path %></h2>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Comment</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
          <% @anime.anime_comment.each do |list| %>
            <tr>
              <td><%= list.user.name if list.user_id %></td>
              <td><%= list.comment %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  
      <h2>Comment Form</h2>
      <%= form_with(model: @anime_comment, local: true) do |form| %>
        <div class= "field">
          <%= form.text_area :comment, class: "input" %>
          <%= form.hidden_field :anime_id, :value => @anime.id %>
        </div>
        <div class="actions">
          <%= form.submit "Add comment", class: "actions" %>
        </div>
      <% end %>
