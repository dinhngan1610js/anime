<p id="notice"><%= notice %></p>


<div class="search">
  <%= search_form_for @q do |f| %>
    <%= f.search_field :title_cont, class: 'search-input', placeholder: "search ..." %>
  <% end %>
</div>


<br>
<br>
<table>
  <tbody>
  <% @animes.each_slice(4) do |anime| %>
    <tr>
      <% anime.each do |row| %>
        <td>
          <%= link_to row.url, target: :_blank do %>
            <%= image_tag(row.image, :size => "285x400", class: "css-style")%>
          <% end %>

          <h3 style="text-align: center;"><%= row.title %></h3>
          <p style="text-align: center;">
            <%= link_to 'More', row %> |
            <%= link_to 'Edit', edit_anime_path(row) %> |
            <%= link_to 'Destroy', row, method: :delete, data: { confirm: 'Are you sure?' } %>
          </p>
        </td>
        <td></td>
        <td></td>
        <td></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

